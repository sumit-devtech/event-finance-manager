// Prisma Schema for Event Budget Planning System (Simplified Combined)
// Combines multi-tenancy from Simplifi + simpler structure from old schema

// ----------------------------------------------

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-database"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  Admin
  EventManager
  Finance
  Viewer
}

enum EventStatus {
  Planning
  Active
  Completed
  Cancelled
}

enum BudgetItemCategory {
  Venue
  Catering
  Marketing
  Logistics
  Entertainment
  StaffTravel
  Technology
  Miscellaneous
}

enum NotificationType {
  Info
  Warning
  Error
  Success
}

enum ExpenseStatus {
  Pending
  Approved
  Rejected
}

enum BudgetItemStatus {
  Pending
  Approved
  Closed
}

enum BudgetStatus {
  Draft
  Review
  Approved
}

enum SubscriptionStatus {
  Active
  Cancelled
  Expired
}

enum BillingCycle {
  Monthly
  Yearly
}

// Multi-Tenancy Root
model Organization {
  id            String         @id @default(uuid())
  name          String
  industry      String?
  logoUrl       String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  users         User[]
  subscriptions Subscription[]
  vendors       Vendor[]
  events        Event[]
  expenses      Expense[]
  activityLogs  ActivityLog[]
  notifications Notification[]
}

// User Model
model User {
  id                       String                @id @default(uuid())
  organizationId           String?
  fullName                 String
  email                    String                @unique
  role                     UserRole
  passwordHash             String?
  isActive                 Boolean               @default(true)
  emailVerified            Boolean               @default(false)
  emailVerificationToken   String?               @unique
  emailVerificationExpires DateTime?
  createdAt                DateTime              @default(now())
  updatedAt                DateTime              @updatedAt
  organization             Organization?         @relation(fields: [organizationId], references: [id])
  createdEvents            Event[]               @relation("EventCreator")
  subscriptionHistory      SubscriptionHistory[]
  expenses                 Expense[]             @relation("ExpenseCreator")
  workflowActions          ApprovalWorkflow[]    @relation("ApproverWorkflow")
  activityLogs             ActivityLog[]
  notifications            Notification[]
  reports                  Report[]
  events                   EventAssignment[]
  assignedBudgetItems      BudgetItem[]          @relation("BudgetItemAssignee")
  uploadedFiles            File[]                @relation("FileUploader")
  createdNotes             Note[]                @relation("NoteCreator")

  @@index([organizationId])
  @@index([email])
  @@index([organizationId, isActive])
  @@index([emailVerificationToken])
}

// Subscription Management
model Subscription {
  id                 String                @id @default(uuid())
  organizationId     String?
  planName           String
  billingCycle       BillingCycle
  status             SubscriptionStatus
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  organization       Organization?         @relation(fields: [organizationId], references: [id])
  history            SubscriptionHistory[]

  @@index([organizationId, status])
}

model SubscriptionHistory {
  id             String       @id @default(uuid())
  subscriptionId String
  action         String // upgrade, downgrade, renew, cancel
  oldValue       Json?
  newValue       Json?
  changedBy      String?
  changedAt      DateTime     @default(now())
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  user           User?        @relation(fields: [changedBy], references: [id])

  @@index([subscriptionId])
  @@index([changedBy])
  @@index([action])
  @@index([changedAt])
  @@index([subscriptionId, changedAt])
}

// Event Model (Simplified)
model Event {
  id                  String               @id @default(uuid())
  organizationId      String?
  name                String
  location            String?
  venue               String? // Venue name
  startDate           DateTime?
  endDate             DateTime?
  eventType           String? // Type of event (conference, workshop, etc.)
  type                String? // Alias for eventType for compatibility
  description         String?
  status              EventStatus          @default(Planning)
  attendees           Int? // Expected number of attendees
  budget              Decimal?             @db.Decimal(10, 2) // Total budget for the event
  organizer           String? // Organizer name
  client              String? // Client name
  createdBy           String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  organization        Organization?        @relation(fields: [organizationId], references: [id])
  creator             User?                @relation("EventCreator", fields: [createdBy], references: [id])
  assignments         EventAssignment[]
  stakeholders        EventStakeholder[]
  budgetItems         BudgetItem[]
  expenses            Expense[]
  vendorEvents        VendorEvent[]
  files               File[]
  notes               Note[]
  activityLogs        ActivityLog[]
  insights            Insight[]
  roiMetrics          ROIMetrics?
  crmSync             CRMSync?
  reports             Report[]
  aiBudgetSuggestions AiBudgetSuggestion[]
  strategicGoals      StrategicGoal[]

  @@index([organizationId])
  @@index([organizationId, status])
  @@index([createdBy])
  @@index([organizationId, status, startDate])
  @@index([startDate])
  @@index([endDate])
  @@index([createdAt])
  @@index([status])
  @@index([organizationId, startDate])
  @@index([organizationId, createdAt])
}

// User to Event Assignment
model EventAssignment {
  id         String   @id @default(uuid())
  userId     String
  eventId    String
  role       String? // Optional role for this assignment (e.g., "Manager", "Lead", "Coordinator")
  assignedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
  @@index([eventId, role])
}

// Event Stakeholders (External participants)
model EventStakeholder {
  id        String   @id @default(uuid())
  eventId   String
  name      String
  role      String?
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([email])
  @@index([eventId, email])
}

// Vendor Management
model Vendor {
  id             String        @id @default(uuid())
  organizationId String?
  name           String
  serviceType    String?
  contactPerson  String?
  email          String?
  phone          String?
  gstNumber      String?
  rating         Float?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organization   Organization? @relation(fields: [organizationId], references: [id])
  vendorEvents   VendorEvent[]
  budgetItems    BudgetItem[]  @relation("BudgetItemVendor")
  expenses       Expense[]     @relation("ExpenseVendor")

  @@index([organizationId])
  @@index([name])
  @@index([email])
  @@index([organizationId, name])
}

// Vendor to Event Assignment
model VendorEvent {
  id         String   @id @default(uuid())
  vendorId   String
  eventId    String
  assignedAt DateTime @default(now())
  vendor     Vendor   @relation(fields: [vendorId], references: [id])
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([vendorId, eventId])
  @@index([vendorId])
  @@index([eventId])
  @@index([assignedAt])
}

// Strategic Goal Model
model StrategicGoal {
  id           String       @id @default(uuid())
  eventId      String
  title        String
  description  String?
  targetValue  Float? // Target value for the goal
  currentValue Float? // Current progress value
  unit         String? // Unit of measurement (e.g., "attendees", "dollars", "%")
  deadline     DateTime? // Deadline for the goal
  status       String       @default("not-started") // not-started, in-progress, completed
  priority     String       @default("medium") // low, medium, high
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  event        Event        @relation(fields: [eventId], references: [id])
  budgetItems  BudgetItem[]

  @@index([eventId])
  @@index([status])
  @@index([priority])
  @@index([deadline])
  @@index([eventId, status])
  @@index([eventId, priority])
}

// Budget Item (Simplified - directly on Event)
model BudgetItem {
  id              String             @id @default(uuid())
  eventId         String
  category        BudgetItemCategory
  subcategory     String? // Subcategory (e.g., Rental, Equipment, Meals)
  description     String
  vendor          String? // Simple text field (fallback)
  vendorId        String? // Optional FK to Vendor model
  estimatedCost   Decimal?           @db.Decimal(10, 2)
  actualCost      Decimal?           @db.Decimal(10, 2)
  status          BudgetItemStatus   @default(Pending)
  notes           String? // Additional notes
  assignedUserId  String? // Assigned user ID
  strategicGoalId String? // Strategic goal mapping (FK to StrategicGoal)
  lastEditedBy    String? // User who last edited
  lastEditedAt    DateTime? // Last edit timestamp
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  event           Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)
  vendorLink      Vendor?            @relation("BudgetItemVendor", fields: [vendorId], references: [id])
  assignedUser    User?              @relation("BudgetItemAssignee", fields: [assignedUserId], references: [id])
  strategicGoal   StrategicGoal?     @relation(fields: [strategicGoalId], references: [id])
  files           File[]
  expenses        Expense[]          @relation("ExpenseBudgetItem")

  @@index([eventId])
  @@index([category])
  @@index([vendorId])
  @@index([eventId, category])
  @@index([status])
  @@index([assignedUserId])
  @@index([strategicGoalId])
  @@index([createdAt])
  @@index([eventId, status])
  @@index([eventId, category, status])
}

// Expense Tracking
model Expense {
  id             String              @id @default(uuid())
  organizationId String?
  eventId        String
  category       BudgetItemCategory? // Category for the expense
  budgetItemId   String? // Optional FK to BudgetItem for linking
  vendor         String? // Simple text field (fallback)
  vendorId       String? // Optional FK to Vendor model
  title          String
  amount         Float
  description    String?
  status         ExpenseStatus       @default(Pending)
  createdBy      String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  organization   Organization?       @relation(fields: [organizationId], references: [id])
  event          Event               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  budgetItem     BudgetItem?         @relation("ExpenseBudgetItem", fields: [budgetItemId], references: [id], onDelete: Cascade)
  vendorLink     Vendor?             @relation("ExpenseVendor", fields: [vendorId], references: [id])
  creator        User?               @relation("ExpenseCreator", fields: [createdBy], references: [id])
  workflows      ApprovalWorkflow[]
  receiptFiles   File[]

  @@index([organizationId])
  @@index([eventId, status])
  @@index([eventId, status, createdAt])
  @@index([category])
  @@index([budgetItemId])
  @@index([eventId, category])
  @@index([createdBy])
  @@index([createdAt])
  @@index([vendorId])
  @@index([organizationId, status])
  @@index([organizationId, eventId, status])
  @@index([eventId, createdAt])
}

model ApprovalWorkflow {
  id         String   @id @default(uuid())
  expenseId  String
  approverId String?
  action     String // approved / rejected
  comments   String?
  actionAt   DateTime @default(now())
  expense    Expense  @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  approver   User?    @relation("ApproverWorkflow", fields: [approverId], references: [id])

  @@index([expenseId])
  @@index([approverId])
  @@index([action])
  @@index([actionAt])
  @@index([expenseId, actionAt])
  @@index([approverId, actionAt])
}

// Analytics & Integration
model Insight {
  id          String   @id @default(uuid())
  eventId     String
  insightType String? // e.g., "budget_variance", "category_analysis", "trend", "recommendation"
  data        Json? // Flexible JSON structure for insight data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  event       Event    @relation(fields: [eventId], references: [id])

  @@index([eventId])
  @@index([insightType])
}

model ROIMetrics {
  id               String   @id @default(uuid())
  eventId          String   @unique
  totalBudget      Float?
  actualSpend      Float?
  leadsGenerated   Int?
  conversions      Int?
  revenueGenerated Float?
  roiPercent       Float?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  event            Event    @relation(fields: [eventId], references: [id])
}

model CRMSync {
  id           String    @id @default(uuid())
  eventId      String    @unique
  crmSystem    String?
  syncStatus   String?
  lastSyncedAt DateTime?
  data         Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  event        Event     @relation(fields: [eventId], references: [id])
}

// Reporting
model Report {
  id         String   @id @default(uuid())
  eventId    String
  reportType String?
  createdBy  String?
  createdAt  DateTime @default(now())
  event      Event    @relation(fields: [eventId], references: [id])
  creator    User?    @relation(fields: [createdBy], references: [id])
  files      File[]

  @@index([eventId])
  @@index([createdBy])
  @@index([reportType])
  @@index([createdAt])
  @@index([eventId, reportType])
  @@index([eventId, createdAt])
}

// File Storage (Flexible - can link to Event, BudgetItem, Expense, or Report)
model File {
  id           String      @id @default(uuid())
  eventId      String?
  budgetItemId String?
  expenseId    String?
  reportId     String?
  filename     String
  path         String // Storage path
  mimeType     String?
  size         Int? // Size in bytes
  uploadedAt   DateTime    @default(now())
  uploadedBy   String? // User ID who uploaded the file
  event        Event?      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  budgetItem   BudgetItem? @relation(fields: [budgetItemId], references: [id])
  expense      Expense?    @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  report       Report?     @relation(fields: [reportId], references: [id])
  uploader     User?       @relation("FileUploader", fields: [uploadedBy], references: [id])

  @@index([eventId])
  @@index([budgetItemId])
  @@index([expenseId])
  @@index([reportId])
  @@index([uploadedAt])
  @@index([mimeType])
  @@index([uploadedBy])
  @@index([eventId, uploadedAt])
  @@index([expenseId, uploadedAt])
}

// Event Notes
model Note {
  id        String   @id @default(uuid())
  eventId   String
  content   String
  tags      String[] // Array of tag strings
  createdBy String? // User ID who created the note
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  creator   User?    @relation("NoteCreator", fields: [createdBy], references: [id])

  @@index([eventId])
  @@index([createdBy])
  @@index([createdAt])
  @@index([eventId, createdAt])
  @@index([eventId, updatedAt])
}

// Notifications (Simplified with type enum)
model Notification {
  id             String           @id @default(uuid())
  organizationId String?
  userId         String
  type           NotificationType
  title          String
  message        String
  read           Boolean          @default(false)
  metadata       Json? // Additional data as JSON
  createdAt      DateTime         @default(now())
  readAt         DateTime?
  organization   Organization?    @relation(fields: [organizationId], references: [id])
  user           User             @relation(fields: [userId], references: [id])

  @@index([organizationId])
  @@index([userId])
  @@index([read])
  @@index([organizationId, read])
  @@index([type])
  @@index([createdAt])
  @@index([userId, read])
  @@index([userId, read, createdAt])
  @@index([organizationId, read, createdAt])
  @@index([userId, type])
}

// Activity Logging
model ActivityLog {
  id             String        @id @default(uuid())
  organizationId String?
  userId         String
  eventId        String?
  action         String // Action performed (e.g., "created", "updated", "deleted")
  details        Json? // Additional details as JSON
  createdAt      DateTime      @default(now())
  organization   Organization? @relation(fields: [organizationId], references: [id])
  event          Event?        @relation(fields: [eventId], references: [id])
  user           User          @relation(fields: [userId], references: [id])

  @@index([organizationId])
  @@index([userId])
  @@index([eventId])
  @@index([createdAt])
  @@index([organizationId, createdAt])
  @@index([action])
  @@index([organizationId, userId])
  @@index([organizationId, userId, createdAt])
  @@index([eventId, createdAt])
  @@index([userId, createdAt])
  @@index([organizationId, eventId, createdAt])
}

// AI Budget Suggestions
model AiBudgetSuggestion {
  id            String             @id @default(uuid())
  eventId       String
  category      BudgetItemCategory
  description   String
  suggestedCost Decimal            @db.Decimal(10, 2)
  reasoning     String? // AI reasoning for the suggestion
  confidence    Float? // Confidence score (0-1)
  accepted      Boolean            @default(false)
  createdAt     DateTime           @default(now())
  event         Event              @relation(fields: [eventId], references: [id])

  @@index([eventId])
  @@index([accepted])
  @@index([category])
  @@index([createdAt])
  @@index([eventId, accepted])
  @@index([eventId, category])
}
